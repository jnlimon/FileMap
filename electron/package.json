{
  "name": "filemap-desktop",
  "version": "1.0.0",
  "description": "FileMap - Desktop Research File Management",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "cd ../research-manager && npm run build",
    "prepare:electron": "rm -rf research-manager && cp -r ../research-manager/build research-manager",
    "build:electron": "npm run prepare:electron && electron-builder",
    "pack": "npm run prepare:electron && electron-builder --dir",
    "dist": "npm run prepare:electron && electron-builder"
  },
  "keywords": [
    "electron",
    "research",
    "desktop",
    "react"
  ],
  "author": "Research Manager Team",
  "license": "MIT",
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "body-parser": "^1.20.3",
    "electron-store": "^10.1.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "app-builder-bin": "^4.2.0",
    "async-exit-hook": "^2.0.1",
    "domelementtype": "^2.3.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "lru-cache": "^6.0.0",
    "path-scurry": "^1.11.1",
    "sax": "^1.4.1"
  },
  "build": {
    "appId": "com.filemap.desktop",
    "productName": "FileMap",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "main.js",
      "fileUtils.js",
      "preload.js",
      "research-manager/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ]
    }
  }
}
